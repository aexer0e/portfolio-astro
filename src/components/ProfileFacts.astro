---
// config import
import { ME } from "@/config";

const { profileFacts } = ME;
---

<div class="flex justify-between gap-1 text-center xl:px-20 lg:px-8">
    {
        profileFacts.map((fact) => (
            <div class="flex flex-col items-center justify-center gap-1">
                <h3 class="text-md font-bold text-n900 dark:text-n200">{`${fact.value}`}</h3>
                <p class="text-sm text-n700 dark:text-n200">
                    {fact.description}
                </p>
            </div>
        ))
    }
</div>

{/*Description or About me -- Section*/}
<div class="mb-4 bg-white dark:bg-n700 rounded-xl py-6 px-6">
    <h2 class="text-2xl font-bold mb-2">About Me</h2>
    <p>
        {ME.aboutMe}
    </p>
</div>
