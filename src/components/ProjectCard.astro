---
// astro imports
import {Image} from "astro:assets";

const { title, cover, id, description, link } = Astro.props;
const aspectRatio = cover && cover.width && cover.height ? `${cover.width} / ${cover.height}` : undefined;
---
<a href={link}>
    <div class="relative flex flex-col text-gray-700 bg-clip-border rounded-xl w-full">
        <div class="relative overflow-hidden rounded-xl w-full flex items-center justify-center" style={aspectRatio ? { aspectRatio } : {}}>
            <Image
                    transition:name={ `${id}-image` }
                    src={cover}
                    alt={"cover preview of " + title}
                    class={"object-contain w-full h-full rounded-xl"}
                    loading={'eager'}
            />
        </div>
        <div class="px-2 py-4 flex flex-col gap-2">
            <div class="flex items-center justify-between mb-2">
                <h4 class="font-semibold text-xl text-n500 dark:text-white ">
                    {title}
                </h4>
            </div>
            <p class="text-sm text-n500 dark:text-light-theme ">
                {description}
            </p>
        </div>
    </div>
</a>