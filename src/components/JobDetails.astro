---
// component imports
import {Badge} from "./ui/badge";
import OpenInNewButton from "./ui/OpenInNewButton.astro";

// library imports
import {formatDatetime} from "../lib/utils";

interface Job {
    company: string;
    location: string
    startDate: string;
    endDate: string;
    goals: string[];
    currentJob: boolean;
    website: string;
}

const {jobData} = Astro.props;  // Ensure correct typing for the props
const {
    company,
    location,
    startDate,
    endDate,
    goals,
    currentJob,
    website
} = jobData as Job;
console.log("jobs")
---

<div class="flex flex-col gap-2">
    <div class="flex items-center gap-2.5">
        <h3 class="underline text-2xl font-bold">{company}</h3>
          <OpenInNewButton href={website} />
    </div>
    <div class="flex items-center gap-2">
        <Badge className="bg-primary-light dark:bg-primary-dark w-fit rounded-md whitespace-nowrap">
            {formatDatetime(startDate)} - {currentJob ? "Present" : formatDatetime(endDate)}
        </Badge>
        <Badge className="bg-primary-light dark:bg-primary-dark w-fit rounded-md whitespace-nowrap">
            {location + " (Remote)"}
        </Badge>
    </div>
    <ul style="list-style: disc;">
        {goals.map((goal: string) => (
                <li>{goal}</li>
        ))}
    </ul>
</div>